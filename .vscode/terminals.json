{
  "__env": { "GlobalVarName": "GlobalVarValue" }, 
  "terminals": [
    { 
      "autorun": false, 
      "autokill": true, 
      "name": "CirPySyncFiles",
      "description": "sync ./ to CIRCUITPY",
      "icon": "sign-out",
      "focus": false, 
      "commands" : [
          "notify --run 'rsync -ra --exclude=\".*\" --exclude=\"__pycache__\" ./ /Volumes/CIRCUITPY'",
          "if [ $? -eq 0 ]; then; exit; fi",
          "echo \"some error happened, see above\""
      ]
    }
  ]
}